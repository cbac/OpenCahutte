{# src/templates/OCQuizgen/delete.html.twig #}

{% extends "layout.html.twig" %}

{% block title %}
  Delete a quiz - {{ parent() }}
{% endblock %}

{% block ocquizgen_body %}

  <h2>Delete a quiz</h2>

  <p>
    Are you sure you want to delete the quiz: "{{ quiz.nom }}" ?
  </p>

  {# On met l'id du quiz dans la route de l'action du formulaire #}
  <form action="{{ path('oc_quizgen_delete', {'id': quiz.id}) }}" method="post">
    <a href="{{ path('oc_quizgen_homepage') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour aux quiz
    </a>
    <input type="submit" value="Delete" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}