{# src/templates/OCQuizGen/delete.html.twig #}

{% extends "OCQuizgen/layout.html.twig" %}

{% block title %}
  Supprimer un quiz - {{ parent() }}
{% endblock %}

{% block ocquizgen_body %}

  <h2>Supprimer un quiz</h2>

  <p>
    Etes-vous certain de vouloir supprimer le quiz "{{ quiz.nom }}" ?
  </p>

  {# On met l'id du quiz dans la route de l'action du formulaire #}
  <form action="{{ path('oc_quizgen_delete', {'id': quiz.id}) }}" method="post">
    <a href="{{ path('oc_quizgen_homepage') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour aux quiz
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}