{% extends "layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block navigation %}
{% endblock %}

{% block body %}
<h2>Bonne(s) r√©ponse(s) : {% for lettre in reponsesJustes %} {{ lettre }} {% endfor %}</h2>
<h2>Scores</h2>
<div class="container">
  <div class="row">
    <div class="col-sm">
    This question
    </div>
    <div class="col-sm">
    Total
    </div>    
  </div>
  <div class="row">
    <div class="col-sm">
      <ul >
    {% for pseudo, question in pointsQuestion %}
        <li>{{pseudo}} : {{question}} points</li>
    {% endfor %}
    </ul>
    </div>
    <div class="col-sm">
    <ul >
    {% for pseudo, total in pointsTotaux %}
        <li>{{pseudo}} : {{total}} points</li>
    {% endfor %}
    </ul>
    </div>    
    </div>
</div>

<br><br>
<div align="right">
{% if idq >= lastidq %}
<a href="{{ path('oc_launch_stat', {'gamepin' : gamepin.id}) }}" class="btn btn-default btn-lg">Quiz results </a>
{% else %}
<a href="{{ path('oc_launch_question', {'gamepin' : gamepin.id, 'idq': idq+1}) }}" class="btn btn-default btn-lg">Next question </a>
{% endif %}
</div>

{% endblock %}
